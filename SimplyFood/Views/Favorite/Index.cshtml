@model IEnumerable<Recipe>

<h2 style="color: black; text-align: center">My Favorite Recipes</h2>
@if (Model == null || Model.Count() == 0)
{
    <p></p>
    <p style="color: black; font-size: large; text-align: center">You have no favorites!</p>
}
else
{

    <table class="table">
        <tr>
            <th style="font-size: medium">Title</th>
            <th style="font-size: medium">Ready In Minutes</th>
        </tr>

        @foreach (var recipe in Model)
        {
            <tr height="100px">
                <td style="font-size: medium">@Html.ActionLink(@recipe.Title, "ViewFavorite", new { id = @recipe.RecipeId })</td>
                <td style="font-size: medium">@recipe.ReadyInMinutes minutes</td>
                <td><div><img style="width:300px;height:300px;" align="right" src="@recipe.ImageUrl" /></div></td>
            </tr>
        }
    </table>
}