@model IEnumerable<Recipe>
    <br/>
    <div class="container">
        <div class="row row-cols-3 gy-5">
            @foreach (var recipe in Model)
            {
            <div class="col">
                <div><img class="img-fluid" style="width:300px;height:300px;" src="@recipe.ImageUrl" /></div>
                <div style="font-size: medium">
                    <h3>@Html.ActionLink(@recipe.Title, "ViewRecipe", new { id = @recipe.RecipeId })</h3>
                    <div><span style="font-weight:bold">Prep time:</span> @recipe.ReadyInMinutes minutes</div>
                </div>
            </div>
            }

        </div>
    </div>

   